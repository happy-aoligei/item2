@using GMS.Framework.Contract
@using GMS.Framework.Utility
@using GMS.Framework.Web.Controls
@using GMS.Account.Contract

@model PagedList<User>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section PageSpecificStyleSheetIncludes{
    <!-- BEGIN PAGE LEVEL STYLES -->
    <link rel="stylesheet" type="text/css" href="/assets/global/plugins/select2/select2.css" />
    <link rel="stylesheet" type="text/css" href="/assets/global/plugins/datatables/extensions/Scroller/css/dataTables.scroller.min.css" />
    <link rel="stylesheet" type="text/css" href="/assets/global/plugins/datatables/extensions/ColReorder/css/dataTables.colReorder.min.css" />
    <link rel="stylesheet" type="text/css" href="/assets/global/plugins/datatables/plugins/bootstrap/dataTables.bootstrap.css" />
    <!-- END PAGE LEVEL STYLES -->
}
<div class="portlet box blue">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-list"></i> 用户记录
        </div>
        <div class="tools">
            <a href="javascript:;" class="collapse" data-original-title="" title=""></a>
        </div>
    </div>
    <div class="portlet-body">
        <div class="row-fluid" style="margin-bottom:10px;">
            <div class="span4">
                <div>
                    <a class="btn blue" title='添加新用户' href="@Url.Action("Create")"><i class="glyphicon glyphicon-plus"></i> 新增</a>
                    <a class="btn red" data-toggle="modal" href="#deletebox"><i class="icon-trash icon-white"></i> 删除</a>
                    <a class="btn purple" data-toggle="modal" href="#searchbox"><i class="fa fa-search"></i> 搜索</a>
                </div>
            </div>
        </div>
        <form method="post" action="@Url.Action("Delete")" id="DeleteForm">
            <table class="table table-striped table-bordered table-hover dataTable no-footer" role="grid">
                <thead>
                    <tr>
                        <th style="width: 8px;">
                            <input type="checkbox" id="checkall" class="group-checkable" />
                        </th>
                        <th>
                            登录名
                        </th>
                        <th>
                            Workcell
                        </th>
                        <th>
                            邮箱
                        </th>
                        <th>
                            电话
                        </th>
                        <th class="hidden-480">
                            角色
                        </th>
                        <th>
                            激活
                        </th>
                        <th>
                            操作
                        </th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var m in Model)
                    {
                        <tr>
                            <td>
                                <input type="checkbox" class="checkboxes" name='ids' value='@m.ID' />
                            </td>
                            <td>
                                @m.LoginName
                            </td>
                            <td>
                                @m.Workcell
                            </td>
                            <td>
                                @m.Email
                            </td>
                            <td>
                                @m.Mobile
                            </td>
                            <td class="hidden-480">
                                @StringUtil.CutString(string.Join(",", m.Roles.Select(r => r.Name)), 40)
                            </td>
                            <td>
                                <span class=" badge badge-@(m.IsActive ? "success" : "inverse") badge-roundless">@m.IsActive</span>
                            </td>
                            <td>
                                <a href="Edit/@m.ID" class="btn btn-xs purple">
                                    <i class="fa fa-edit"></i> 编辑
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </form>
        <div class="row">
            <div class="col-md-5 col-sm-12">
                <div class="dataTables_info" role="status" aria-live="polite">
                    Total : @Model.TotalItemCount entries
                </div>
            </div>
            @if (Model.TotalPageCount > 1)
            {
                <div class="col-md-7 col-sm-12">
                    <div class="dataTables_paginate paging_simple_numbers">
                        <ul class="pagination">
                            @if (Model.CurrentPageIndex == 1)
                            {
                                <li class="paginate_button previous disabled" aria-controls="sample_1" tabindex="0"><a href="#"><i class="fa fa-angle-left"></i></a></li>
                            }
                            else
                            {
                                <li class="paginate_button previous" aria-controls="sample_1" tabindex="0" id="sample_1_previous"><a href="?pageIndex=@(Model.CurrentPageIndex-1)"><i class="fa fa-angle-left"></i></a></li>
                            }
                            @if (Model.TotalPageCount <= 5)
                            {
                                for (int i = 1; i <= Model.TotalPageCount; ++i)
                                {
                                    if (i == Model.CurrentPageIndex)
                                    {
                                        <li class="paginate_button active" aria-controls="sample_1" tabindex="0"><a href="?pageIndex=@i">@i</a></li>
                                    }
                                    else
                                    {
                                        <li class="paginate_button" aria-controls="sample_1" tabindex="0"><a href="?pageIndex=@i">@i</a></li>
                                    }
                                }
                            }
                            else
                            {
                                if (Model.TotalPageCount - 5 >= Model.CurrentPageIndex)
                                {
                                    for (int i = Model.CurrentPageIndex; i < Model.CurrentPageIndex + 4; ++i)
                                    {
                                        if (i == Model.CurrentPageIndex)
                                        {
                                            <li class="paginate_button active" aria-controls="sample_1" tabindex="0"><a href="?pageIndex=@i">@i</a></li>
                                        }
                                        else
                                        {
                                            <li class="paginate_button" aria-controls="sample_1" tabindex="0"><a href="?pageIndex=@i">@i</a></li>
                                        }
                                    }
                                    <li class="paginate_button disabled" aria-controls="sample_1" tabindex="0"><a href="">...</a></li>
                                }
                                else
                                {
                                    for (int i = Model.TotalPageCount - 4; i <= Model.TotalPageCount; ++i)
                                    {
                                        if (i == Model.CurrentPageIndex)
                                        {
                                            <li class="paginate_button active" aria-controls="sample_1" tabindex="0"><a href="?pageIndex=@i">@i</a></li>
                                        }
                                        else
                                        {
                                            <li class="paginate_button" aria-controls="sample_1" tabindex="0"><a href="?pageIndex=@i">@i</a></li>
                                        }
                                    }
                                }
                            }
                            @if (Model.CurrentPageIndex == Model.TotalPageCount)
                            {
                                <li class="paginate_button disabled" aria-controls="sample_1" tabindex="0" id="sample_1_next"><a href="#"><i class="fa fa-angle-right"></i></a></li>
                            }
                            else
                            {
                                <li class="paginate_button" aria-controls="sample_1" tabindex="0" id="sample_1_next"><a href="?pageIndex=@(Model.CurrentPageIndex+1)"><i class="fa fa-angle-right"></i></a></li>
                            }
                        </ul>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<div class="modal fade draggable-modal ui-draggable" id="searchbox" tabindex="-1" role="basic" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header ui-draggable-handle">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">搜索</h4>
            </div>
            <div class="modal-body">
                <form action="Index" method="get" class="form-horizontal" id="searchform">
                    <div class="form-body">
                        <div class="form-group">
                            <label class="col-md-3 control-label">用户名</label>
                            <div class="col-md-6">
                                @Html.TextBox("LoginName", null, new { @class = "form-control input-circle", placeholder = "Enter LoginName" })
                                <span class="help-block"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">部门编号</label>
                            <div class="col-md-6">
                                @Html.TextBox("Workcell", null, new { @class = "form-control input-circle", placeholder = "Enter Workcell" })
                                <span class="help-block"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">邮箱</label>
                            <div class="col-md-6">
                                @Html.TextBox("Email", null, new { @class = "form-control input-circle", placeholder = "Enter Email" })
                                <span class="help-block"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">电话</label>
                            <div class="col-md-6">
                                @Html.TextBox("Mobile", null, new { @class = "form-control input-circle", placeholder = "Enter Phone Number" })
                                <span class="help-block"></span>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn blue" form="searchform">搜索</button>
                <button type="button" class="btn default" data-dismiss="modal">关闭</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<div class="modal fade draggable-modal ui-draggable" id="deletebox" tabindex="-1" role="basic" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header ui-draggable-handle">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">提示</h4>
            </div>
            <div class="modal-body">
                您确定要删除所勾选的内容吗?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn blue" data-dismiss="modal" id="deletebutton">确定</button>
                <button type="button" class="btn default" data-dismiss="modal">取消</button>
            </div>
        </div>
    </div>
</div>
@section PageSpecificJavascriptIncludes{
    <script type="text/javascript">
        $("#searchbox").draggable({
                handle: ".modal-header"
        });
        $("#deletebox").draggable({
                handle: ".modal-header"
        });
    </script>
}