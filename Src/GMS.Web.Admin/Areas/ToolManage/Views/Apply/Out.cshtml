@using GMS.Framework.Contract
@using GMS.Framework.Utility
@using GMS.Framework.Web.Controls
@using GMS.ToolManage.Contract

@model PagedList<OutTable>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section PageSpecificStyleSheetIncludes{
    <!-- BEGIN PAGE LEVEL STYLES -->
    <link rel="stylesheet" type="text/css" href="/assets/global/plugins/select2/select2.css" />
    <link rel="stylesheet" type="text/css" href="/assets/global/plugins/datatables/extensions/Scroller/css/dataTables.scroller.min.css" />
    <link rel="stylesheet" type="text/css" href="/assets/global/plugins/datatables/extensions/ColReorder/css/dataTables.colReorder.min.css" />
    <link rel="stylesheet" type="text/css" href="/assets/global/plugins/datatables/plugins/bootstrap/dataTables.bootstrap.css" />
    <!-- END PAGE LEVEL STYLES -->
    <style>
    span.help-block {
        margin-left: 14px;
        color: red;
    }
</style>
}
<div class="portlet box blue">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-list"></i> 出库记录
        </div>
        <div class="tools">
            <a href="javascript:;" class="collapse" data-original-title="" title=""></a>
        </div>
    </div>
    <div class="portlet-body">
        <div class="row-fluid" style="margin-bottom:10px;">
            <div class="span4">
                <div>
                    <a class="btn purple" data-toggle="modal" href="#searchbox"><i class="fa fa-search"></i> 搜索</a>
                </div>
            </div>
        </div>
        <table class="table table-striped table-bordered table-hover dataTable no-footer" role="grid">
            <thead>
                <tr>
                    <th>
                        夹具代码
                    </th>
                    <th>
                        夹具系列号
                    </th>
                    <th>
                        出库库位
                    </th>
                    <th>
                        去向
                    </th>
                    <th>
                        生产线编号
                    </th>
                    <th>
                        出库时间
                    </th>
                    <th>
                        班次
                    </th>
                    <th>
                        经手人
                    </th>
                    <th>
                        记录人
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var m in Model)
                {
                    <tr>
                        <td>
                            @m.Code
                            @if (m.OutstorageDate.GetValueOrDefault().Date == DateTime.Now.Date)
                            {
                                <span class="badge badge-success badge-roundless">New</span>
                            }
                        </td>
                        <td>
                            @m.SeqID
                        </td>
                        <td>
                            @m.Location-@m.Bin

                        </td>
                        <td>
                            @m.GoWhere

                        </td>
                        <td>
                            @m.ProductID-@m.LineID
                        </td>
                        <td>
                            @m.OutstorageDate.GetValueOrDefault().ToString("yyyy-MM-dd HH:mm:ss")
                        </td>
                        <td>
                            @m.ShiftTime
                        </td>
                        <td>
                            @m.HandlerID
                        </td>
                        <td>
                            @m.RecorderID
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="row">
            <div class="col-md-5 col-sm-12">
                <div class="dataTables_info" role="status" aria-live="polite">
                    Total : @Model.TotalItemCount entries
                </div>
            </div>
            @if (Model.TotalPageCount > 1)
            {
                <div class="col-md-7 col-sm-12">
                    <div class="dataTables_paginate paging_simple_numbers">
                        <ul class="pagination">
                            @if (Model.CurrentPageIndex == 1)
                            {
                                <li class="paginate_button previous disabled" aria-controls="sample_1" tabindex="0"><a href="#"><i class="fa fa-angle-left"></i></a></li>
                            }
                            else
                            {
                                <li class="paginate_button previous" aria-controls="sample_1" tabindex="0" id="sample_1_previous"><a href="?pageIndex=@(Model.CurrentPageIndex-1)"><i class="fa fa-angle-left"></i></a></li>
                            }
                            @if (Model.TotalPageCount <= 5)
                            {
                                for (int i = 1; i <= Model.TotalPageCount; ++i)
                                {
                                    if (i == Model.CurrentPageIndex)
                                    {
                                        <li class="paginate_button active" aria-controls="sample_1" tabindex="0"><a href="?pageIndex=@i">@i</a></li>
                                    }
                                    else
                                    {
                                        <li class="paginate_button" aria-controls="sample_1" tabindex="0"><a href="?pageIndex=@i">@i</a></li>
                                    }
                                }
                            }
                            else
                            {
                                if (Model.TotalPageCount - 5 >= Model.CurrentPageIndex)
                                {
                                    for (int i = Model.CurrentPageIndex; i < Model.CurrentPageIndex + 4; ++i)
                                    {
                                        if (i == Model.CurrentPageIndex)
                                        {
                                            <li class="paginate_button active" aria-controls="sample_1" tabindex="0"><a href="?pageIndex=@i">@i</a></li>
                                        }
                                        else
                                        {
                                            <li class="paginate_button" aria-controls="sample_1" tabindex="0"><a href="?pageIndex=@i">@i</a></li>
                                        }
                                    }
                                    <li class="paginate_button disabled" aria-controls="sample_1" tabindex="0"><a href="">...</a></li>
                                }
                                else
                                {
                                    for (int i = Model.TotalPageCount - 4; i <= Model.TotalPageCount; ++i)
                                    {
                                        if (i == Model.CurrentPageIndex)
                                        {
                                            <li class="paginate_button active" aria-controls="sample_1" tabindex="0"><a href="?pageIndex=@i">@i</a></li>
                                        }
                                        else
                                        {
                                            <li class="paginate_button" aria-controls="sample_1" tabindex="0"><a href="?pageIndex=@i">@i</a></li>
                                        }
                                    }
                                }
                            }
                            @if (Model.CurrentPageIndex == Model.TotalPageCount)
                            {
                                <li class="paginate_button disabled" aria-controls="sample_1" tabindex="0" id="sample_1_next"><a href="#"><i class="fa fa-angle-right"></i></a></li>
                            }
                            else
                            {
                                <li class="paginate_button" aria-controls="sample_1" tabindex="0" id="sample_1_next"><a href="?pageIndex=@(Model.CurrentPageIndex+1)"><i class="fa fa-angle-right"></i></a></li>
                            }
                        </ul>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<div class="portlet box green">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-gift"></i>出库申请
        </div>
        <div class="tools">
            <a href="javascript:;" class="collapse" data-original-title="" title=""></a>
        </div>
    </div>
    <div class="portlet-body form">
        <form action="Out_Create" method="post" class="form-horizontal" id="Create">
            <div class="form-body">
                <div class="form-group">
                    <label class="col-md-3 control-label">夹具代码</label>
                    <div class="col-md-4">
                        @Html.TextBoxFor(m => m.FirstOrDefault().Code, new { Value = "", @class = "form-control input-circle", placeholder = "Enter CodeID" })
                        <span class="help-block">@Html.ValidationMessageFor(m => m.FirstOrDefault().Code)</span>
                    </div>
                    <div class="col-md-1">
                        <button type="button" class="btn btn-circle blue"><i class="fa fa-search"></i>扫描</button>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">夹具系列号</label>
                    <div class="col-md-4">
                        @Html.TextBoxFor(m => m.FirstOrDefault().SeqID, new { Value = "", @class = "form-control input-circle", placeholder = "Enter SeqID",form="Create" })
                        <span class="help-block">@Html.ValidationMessageFor(m => m.FirstOrDefault().SeqID)</span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">出库库位</label>
                    <div class="col-md-4">
                        @Html.TextBoxFor(m => m.FirstOrDefault().Location, new { Value = "", @class = "form-control input-circle", placeholder = "Enter Location" })
                        <span class="help-block">@Html.ValidationMessageFor(m => m.FirstOrDefault().Location)</span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">去向</label>
                    <div class="col-md-4">
                        @Html.TextBoxFor(m => m.FirstOrDefault().GoWhere, new { Value = "", @class = "form-control input-circle", placeholder = "Enter GoWhere" })
                        <span class="help-block">@Html.ValidationMessageFor(m => m.FirstOrDefault().GoWhere)</span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">生产线编号</label>
                    <div class="col-md-4">
                        @Html.TextBoxFor(m => m.FirstOrDefault().LineID, new { Value = "", @class = "form-control input-circle", placeholder = "Enter LineID" })
                        <span class="help-block">@Html.ValidationMessageFor(m => m.FirstOrDefault().LineID)</span>
                    </div>
                </div>
            </div>
            <div class="form-actions">
                <div class="row">
                    <div class="col-md-offset-3 col-md-9">
                        <button type="submit" class="btn btn-circle blue">申请</button>
                        <a href="Out" type="button" class="btn btn-circle default">取消</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
<div class="modal fade draggable-modal ui-draggable" id="searchbox" tabindex="-1" role="basic" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header ui-draggable-handle">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">搜索</h4>
            </div>
            <div class="modal-body">
                <form action="Out" method="get" class="form-horizontal" id="searchform">
                    <div class="form-body">
                        <div class="form-group">
                            <label class="col-md-3 control-label">夹具代码</label>
                            <div class="col-md-6">
                                @Html.TextBox("Code", null, new { @class = "form-control input-circle", placeholder = "Enter Code" })
                                <span class="help-block"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">夹具系列号</label>
                            <div class="col-md-6">
                                @Html.TextBox("SeqID", null, new { @class = "form-control input-circle", placeholder = "Enter SeqID" })
                                <span class="help-block"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">出库日期</label>
                            <div class="col-md-6">
                                @Html.TextBox("Email", null, new { @class = "form-control input-circle", placeholder = "Enter WarehouseDate" })
                                <span class="help-block"></span>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn blue" form="searchform">搜索</button>
                <button type="button" class="btn default" data-dismiss="modal">关闭</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

@section PageSpecificJavascriptIncludes{
    <script type="text/javascript">
        $("#searchbox").draggable({
                handle: ".modal-header"
            });
    </script>
}