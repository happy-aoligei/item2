@using GMS.Framework.Contract
@using GMS.Framework.Utility
@using GMS.Framework.Web.Controls
@using GMS.ToolManage.Contract

@model PagedList<tongs_entity>
<div class="portlet box yellow">
    <div class="portlet-title">
        <h4><i class="icon-reorder"></i>出入库记录</h4>
        <div class="tools">
            <a href="javascript:;" class="collapse"></a>
        </div>
    </div>
    <div class="portlet-body">
        <table class="table table-striped table-hover ">
            <thead>
                <tr>
                    <th>
                        夹具代码
                    </th>
                    <th>
                        夹具系列号
                    </th>
                    <th>
                        采购单据号
                    </th>
                    <th>
                        入库日期
                    </th>
                    <th>
                        存放库位
                    </th>
                    <th>
                        状态
                    </th>
                    <th>
                        已使用次数
                    </th>
                    <th>
                        故障概率
                    </th>
                    <th>
                        操作
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var m in Model)
                {
                    <tr>
                        <td>
                            @m.Code
                        </td>
                        <td>
                            @m.SeqID
                        </td>
                        <td>
                            @m.BillNo
                        </td>
                        <td>
                            @m.RegDate.ToString("yyyy-MM-dd HH-mm-ss")
                        </td>
                        <td>
                            @m.Location-@m.Bin
                        </td>
                        <td>
                            @m.State
                        </td>
                        <td>
                            @m.UsedCount
                        </td>
                        <td>
                            @m.ErrProbability
                        </td>
                        <td>
                            <a class="btn mini purple" title='编辑项目内容' href="@Url.Action("Index","FullLife", new { id = m.ID })">
                                <i class="icon-edit"></i>
                                详情
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="dataTables_paginate paging_bootstrap pagination">
        @Html.Pager(Model, new PagerOptions() { ShowTotalItemCount = true })
    </div>
</div>

