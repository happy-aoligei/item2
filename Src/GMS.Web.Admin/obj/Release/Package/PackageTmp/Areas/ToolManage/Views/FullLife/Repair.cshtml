@using GMS.Framework.Contract
@using GMS.Framework.Utility
@using GMS.Framework.Web.Controls
@using GMS.ToolManage.Contract

@model tongs_entity
<div class="portlet box green">
    <div class="portlet-title">
        <div class="caption">
            报修记录
        </div>
        <div class="tools">
            <a href="javascript:;" class="collapse" data-original-title="" title=""></a>
        </div>
    </div>
    <div class="portlet-body">
        <table class="table table-striped table-bordered table-hover dataTable no-footer">
            <thead>
                <tr>
                    <th>
                        夹具代码
                    </th>
                    <th>
                        夹具系列号
                    </th>
                    <th>
                        采购单据号
                    </th>
                    <th>
                        入库日期
                    </th>
                    <th>
                        存放库位
                    </th>
                    <th>
                        状态
                    </th>
                    <th>
                        已使用次数
                    </th>
                    <th>
                        故障概率
                    </th>
                    <th>
                        图片
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        @Model.Code
                    </td>
                    <td>
                        @Model.SeqID
                    </td>
                    <td>
                        @Model.BillNo
                    </td>
                    <td>
                        @Model.RegDate.ToString("yyyy-MM-dd HH-mm-ss")
                    </td>
                    <td>
                        @Model.Location-@Model.Bin
                    </td>
                    <td>
                        @Model.State
                    </td>
                    <td>
                        @Model.UsedCount
                    </td>
                    <td>
                        @Model.ErrProbability
                    </td>
                    <td>
                        <a class="btn btn-xs purple thickbox" title='编辑项目内容' href="@Url.Action(" Information_Edit", new { id=Model.ID })?TB_iframe=true&height =600&width =500">
                            <i class="icon-picture"></i>
                            点击查看
                        </a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>



